  "bugs": {
    "url": "https://github.com/your-username/micro-frontend-framework/issues"
  },
  "homepage": "https://github.com/your-username/micro-frontend-framework#readme",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
